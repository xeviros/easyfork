function addOrder(htmlPartial) {
  const userOrders = document.querySelector("#user-orders, #user-orders-mob")
  userOrders.insertAdjacentHTML("beforeend", htmlPartial)

}

addOrder("<%= j render 'order_item', order_item: @order_item %>");

