<% if @bill.restaurant.photo.file.nil? %>

  <div class="banner-resto" style="background-image: url('<%= image_path 'rest1.jpg' %>')">
    <div class="resto-infos">
      <h3><%= @bill.restaurant.name %></h3>
      <% if @bill.restaurant.average_rating == nil %>
                     <p>  </p>
                  <% else %>

    <% @bill.restaurant.average_rating.times do %>
       <span> <i class="fas fa-star"></i> </span>
    <% end %>
    <% (5 - @bill.restaurant.average_rating).times do %>
        <span><i class="far fa-star"></i> </span>
    <% end %>
    <% end %>
      <p>  <%= @bill.restaurant.description %></p>
      <div class= "text-box"> <p>€€€ </p> </div> <div class= "text-box"> <p> <%= @bill.restaurant.address %></p> </div>
    </div>
  <div class="resto-infos">
    <div class= "text-box">
      <p style="margin-top: 20%;">The restaurant opens at <span style="color: #32B796;"><%= @bill.restaurant.opening_time.strftime("%H:%M") %></span></p>
      <p>The restaurant closes at <span style="color: #EE5F5B;"><%= @bill.restaurant.closing_time.strftime("%H:%M") %></span></p>
    </div>
  </div>
  </div>
</div>

<% else %>

  <div class="banner-resto" style="background-image: url('<%= cl_image_path @restaurant.photo %>')">
    <div class="resto-infos">
      <h3 ><%= @bill.restaurant.name %></h3>
      <div class= "text-box"> <p> @bill.restaurant.address</p> </div>
    </div>
  </div>
</div>
<% end %>

<br>

<div class="cont-pills-menus-order">
  <div class="container-pills">
    <div class="col-md-12">
      <ul class="nav nav-pills nav-stacked">
        <li class="btn-menu"><%= link_to "Menu", bill_path(@bill, query: ""), remote: true  %></li>
        <li><%= link_to "Starters", bill_path(@bill, query: "starters"), remote: true %></li>
        <li><%= link_to "Mains", bill_path(@bill, query: "mains"), remote: true %></li>
        <li><%= link_to "Desserts", bill_path(@bill, query: "desserts"), remote: true %></li>
        <li><%= link_to "Drinks", bill_path(@bill, query: "drinks"), remote: true %></li>
      </ul>
    </div>
  </div>
<div class="container-show menu-items" style="overflow:scroll;">
  <%= render "items/menu-items", bill: @bill, order: @order, order_item: @order_item %>
</div>
    <div class="container-order">
      <h2 class="text-center your-order">Your order</h2>
      <%= form_for @bill do |f| %>
        <div class="text-center"> <%= f.label :number_of_people %>
          <%= f.select :number_of_people, 1..20 %></div>
          <br>
          <div class="text-center"><%= f.label :Time_for_booking %>
            <br>
            <%= f.datetime_select :date, :default => Time.now %>
          </div>
          <hr>
          <div class= "overflow-bill" id="user-orders" style="overflow:scroll">
            <% @bill.orders.each do |order| %>
              <% if order.user_id == current_user.id %>
                <% order.order_items.each do |order_item| %>
                  <%= render "order_items/order_item", order_item: order_item %>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr>
        <div class="text-center">
            <button type="button" class="btn btn-warning text-center" data-toggle="modal" data-target="#myModal">
              Invite your friends!
            </button>

        </div>

        <hr>

        <div class="total-price-bill-show">
          <div class="total-price-bill-show-text">
            <u> Total price: </u>
          </div>

          <% sum = 0 %>
            <% @bill.orders.each do |order| %>
              <% order.order_items.each do |order_item| %>
                <% sum += order_item.item.price%>
            <% end %>
          <% end %>

          <div data-order-price-id="<%= @order.id %>" class="total-price-bill-show-sum">
            <u> <%= sum %>€ </u>
          </div>
        </div>

        <br>

       <div class="text-center">
          <input type="submit" name="commit" value="Confirm Order" data-disable-with="Confirm Order"  class="btn btn-blue btn-lg">
       </div>
        <% end %>
      </div>
    </div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Invite your friends!</h4>
      </div>
      <div class="modal-body">
          <p>Share this link with your friends for them to place an order!</p>
            <div>
              <a href="https://api.whatsapp.com/send?phone=whatsappphonenumber&text=<%= request.original_url %>" target="_blank"> <%= '<i class="fab fa-whatsapp"></i>'.html_safe %> Whatsapp  </a>
            </div>
            <!--       <a href="mailto:{email_address}?subject=Join me for lunch!&body=<%= request.original_url %>">  <%= '<i class="far fa-envelope"></i>'.html_safe %>Send Email</a> -->
            <div>
              <a href="https://mail.google.com/mail/?view=cm&to={email_address}&su=Join me for lunch!&body=<%= request.original_url %>" target="_blank">  <%= '<i class="far fa-envelope"></i>'.html_safe %> Send Email  </a>
            </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



