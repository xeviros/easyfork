<%#items_array = @bill.restaurant.items %>
<div class="main-container">
  <div class="container item-menu">
    <%= simple_form_for [@order, @order_item] do |f| %>
      <%= f.association :item,
        collection: @bill.restaurant.items,
        as: :radio_buttons,
        item_wrapper_class: 'js-form-trigger',
        label_method: ->(obj){ "
          <p>#{obj.name}</p>
          <p>#{obj.price}€</p>
          <img src='http://icons.iconarchive.com/icons/aha-soft/desktop-buffet/256/Chicken-icon.png'>
        ".html_safe } %>
      <%= f.button :submit %>
    <% end %>
  </div>

  <div class="container">
    <% @bill.orders.each do |order| %>
      <% order.order_item.each do |order_item| %>
        <p class="text-center"> <%= order_item.item.name %> <%= order_item.item.price%>€<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, order_item_path(order_item), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-blue'%> </p>
      <% end %>
    <% end %>


    <p>Total price:</p>
    <p>
      <% sum = 0 %>
      <% @bill.orders.each do |order| %>
        <% order.order_item.each do |order_item| %>
          <% sum += order_item.item.price%>
        <% end %>
      <% end %>
      <%= sum %>€
    </p>
    <h1 class="text-center"> <%= link_to 'FINISH ORDER', edit_bill_path(@bill), class: 'btn btn-blue'%>
    </h1>

  </div>
</div>

