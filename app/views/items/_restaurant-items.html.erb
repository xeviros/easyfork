<div class="menu-title">
  <% if params[:query].present? %>
    <% if restaurant.items[0].nil? %>
      <h2>This restaurant doesn't have any item in this category 🤷‍ </h2>
    <% else %>
      <h4>  <%= restaurant.items[0].category.upcase %>: </h4>
    <% end %>
  <% else %>
   <h4>ALL MEALS:</h4>
  <% end %>
</div>

<% add = image_path("add.png") %>
<% categories = {
  "mains" => image_path("food-mains.png"),
  "starters" => image_path("food-starters.png"),
  "desserts" => image_path("food-desserts.png"),
  "drinks" => image_path("food-drinks.png"),
}  %>

<% restaurant.items.each do |item| %>
  <div class='menu-all'>
    <div class='menu-picture'>
      <img src="<%= image_path "food-#{item.category}.png" %>" height='42'/>
    </div>
    <div class='menu-description'>
      <h3><%= item.name.capitalize %></h3>
      <p><%= item.description %></p>
    </div>
    <div class='menu-price'>
      <%= item.price %> €
    </div>
    <%#= f.submit %>
  </div>
<% end %>

