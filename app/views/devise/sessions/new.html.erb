

<div class="bannernew" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 50%), url('<%= image_path 'jay-wennington-2065-unsplash.jpg' %>');">


 <h1 class="text-center">Log in</h1>

  <div class="container-form">


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">

    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
   <div class="text-center">  <%= f.button :submit, "Log in", class: "btn btn-blue"%> </div>
  </div>
<% end %>

<div class="black"> <%= render "devise/shared/links" %> </div>

</div>
</div>
