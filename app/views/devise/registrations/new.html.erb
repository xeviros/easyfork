
<div class="bannerfooter" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 50%), url('<%= image_path 'rest1.jpg' %>');">
  <h1 class="text-center">Sign up</h1>
    <div class="container-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :last_name, required: true %>
        <%= f.input :first_name, required: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :picture %>
      </div>
      <div class="form-actions">
        <div class="text-center"> <%= f.button :submit, "Sign up", class: "btn btn-blue" %> </div>
      </div>
      <% end %>
      <div class="black"> <%= render "devise/shared/links" %> </div>
  </div>
</div>


