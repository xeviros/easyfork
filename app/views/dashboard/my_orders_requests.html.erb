      <div class="message-name">


        <p> <%= bill.number_of_people %> people </p>
      </div>
      <div class="message-body">
        <p><strong> <%=  bill.restaurant.name %></strong></p>
        <p>
         From  <%= bill.date %>
        </p>
      </div>
        <p class="price"> <%= bill.total_price %> â‚¬ </p>
      <div class="message-status text-center">
        <div class="form-group">
          <%= render 'form', bill: bill %>
        </div>
      </div>
      <div>

      </div>
    </div>
  <% end %>
</div>







