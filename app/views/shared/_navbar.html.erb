<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "EasyFork_logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if current_user.restaurants.count > 0 %>
      <%= link_to "My order requests ", my_orders_requests_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My restaurants", my_restaurants_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
      <%= link_to "My orders", my_orders_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "All restaurants", restaurants_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%#= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

<!--
  image_tag => <img src="" alt="">
  image_path => "assets/images/avatar.jpg"
-->
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <% if current_user.picture.file.nil? %>
            <%= image_tag "http://steamavatars.co/?media_dl=2408", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= cl_image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "my-profile" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
<!--             <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li> -->
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">

      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <% if current_user.restaurants.count > 0 %>
          <li>  <%= link_to "My order requests ", my_orders_requests_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
          <li>  <%= link_to "My restaurants", my_restaurants_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
          <% end %>
          <li>  <%= link_to "My orders", my_orders_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
          <li>  <%= link_to "All restaurants", restaurants_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
        <li> <%= link_to "my-profile" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
       </li>
<!--        <li> <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
       </li> -->
        <li> <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
        </li>

      <% else %>
        <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li> <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      <% end %>
       </ul>
    </div>
  </div>
</div>




