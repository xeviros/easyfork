<!-- app/views/payments/new.html.erb -->
<br>
<div class="container">
  <div class="container-payement">
  <h1> Pay your order</h1>
  <%= form_tag order_payments_path(@order) do %>
    <article>
 <hr>
      <h1 style="font-size: 23px"><label class="amount">
        <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
      </label></h1>
    </article>

   <h1><script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="My Order"
      data-email="<%= current_user.email %>"
      data-amount="<%= @order.amount_cents %>"
      data-currency="<%= @order.amount.currency %>"></script></h1>
  <% end %>
  </div>
</div>
<br><br><br><br><br><br><br>
