<br>

<div class="text-center">  <%= link_to "Start Order", restaurant_bills_path(@restaurant), method: :post, class: 'btn btn-blue'%>
</div>
<div class="cont-pills-menus">
  <div class="container-pills">
    <div class="col-md-12">
      <ul class="nav nav-pills nav-stacked">
        <li class="btn-menu"><a href="#">Menu</a></li>
        <li><a href="?utf8=‚úì&query=starters">Starters</a></li>
        <li><a href="?utf8=‚úì&query=mains">Main</a></li>
        <li><a href="?utf8=‚úì&query=desserts">Desserts</a></li>
        <li><a href="?utf8=‚úì&query=drinks">Drinks</a></li>
      </ul>
    </div>
  </div>

  <div class="container-show" style="overflow:scroll;">

    <div class="menu-title">
      <% if @restaurant.items[0].nil? %>
      <h2>This restaurant doesn't have any item in this category ü§∑‚Äç </h2>
      <% else %>
      <h2>  <%= @restaurant.items[0].category.upcase %>: </h2>
      <% end %>

      <% @restaurant.items.each do |item| %>
      <div class="menu-all">
        <div class="menu-picture"><%= image_tag "food-#{item.category}.png" , height: 100%></div>
        <div class="menu-description">
          <h3><%= item.name %></h3>
          <p><%= item.description %></p>
        </div>
        <div class="menu-price">      <%= item.price %> ‚Ç¨ </div>
        <div class="menu-add"></div>
      </div>
      <% end %>
      <br>
    </div>
  </div>
</div>


