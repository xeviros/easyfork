          <% if @current_user != nil %>
            <% if @restaurant.user_id == @current_user.id %>
              <%= link_to "Add images",  new_restaurant_image_path(@restaurant), class: "btn-add-images btn btn-blue" %>
            <% end %>
          <% end %>
