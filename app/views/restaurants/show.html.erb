      <%= link_to "Start order", restaurant_bills_path(@restaurant), method: :post, class: 'btn btn-order btn-blue btn-lg btn-big'%>
    <% end %>
  <% else %>
    <%= link_to "Start order", restaurant_bills_path(@restaurant), method: :post, class: 'btn btn-order btn-blue btn-lg btn-big'%>
