      <%= link_to "Start order", restaurant_bills_path(@restaurant), method: :post, class: 'button-order'%>
    <% end %>
  <% else %>
    <%= link_to "Start order", restaurant_bills_path(@restaurant), method: :post, class: 'button-order'%>
