<% if @restaurant.photo.file.nil? %>
  <div class="banner-resto" style="background-image: url('<%= image_path 'rest1.jpg' %>')">
    <div class="resto-infos">
      <h3 ><%= @restaurant.name %></h3>
      <div class= "text-box"> <p>€€€ </p> </div> <div class= "text-box"> <p> 10 rue La Croix</p> </div>
    </div>
  </div>

<% else %>
  <div class="banner-resto" style="background-image: url('<%= cl_image_path @restaurant.photo %>')">
    <div class="resto-infos">
      <h3 ><%= @restaurant.name %></h3>
      <div class= "text-box"> <p> €€€ --- 10 rue La Croix</p> </div>
    </div>
  </div>
<% end %>

<br>
<div class="text-center">  <%= link_to "Start Order", restaurant_bills_path(@restaurant), method: :post, class: 'btn btn-blue'%>
</div>
<div class="cont-pills-menus">
    <div class="container-pills">
      <div class="col-md-12">
        <ul class="nav nav-pills nav-stacked">
          <li class="btn-menu"><a href="#">Menu</a></li>
          <li><a href="?utf8=✓&query=starter">Starters</a></li>
          <li><a href="?utf8=✓&query=main">Main</a></li>
          <li><a href="?utf8=✓&query=dessert">Desserts</a></li>
          <li><a href="?utf8=✓&query=drinks">Drinks</a></li>
        </ul>
      </div>
    </div>

    <div class="container-show">

      <div class="menu-title">
        <h2> Menu:</h2>
        <% @restaurant.items.each do |item| %>
          <div class="menu-all">
            <div class="menu-picture"><%= image_tag "food.png" , height: 100%></div>
            <div class="menu-description">
              <h3><%= item.name %></h3>
              <p><%= item.description %></p>
            </div>
            <div class="menu-price">      <%= item.price %> € </div>
            <div class="menu-add"></div>
        </div>
         <% end %>
          <br>
         </div>
    </div>
</div>


<div class="container">
  <div
    id="map"
    style="width: 100%;
    height: 380px;"
    data-markers="<%= @markers.to_json %>"
    ></div>
</div>


