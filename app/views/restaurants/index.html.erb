<div class="main-container">
  <div class="card-container">
    <div class="row">
      <% @restaurants.each do |restaurant| %>
       <div class="col-xs-12 col-md-6">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),  url('<%= cl_image_path restaurant.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="restaurant-title-wrapper">
              <h2> <%=  restaurant.name.upcase %> </h2>
            </div>
            <div class="card-category">
              <%= restaurant.category.capitalize %>
            </div>
            </div>
          </div>
       </div>
      <% end %>
    </div>
  </div>

  <div class="map-container">
    <div class="map">
